@{
    ViewBag.Title = "Create";
}

<h2 align ="center">Create</h2>
<form method="post">
    <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="First Name" />
    <span class="text-danger">@Html.ValidationMessage("FirstName")</span>

    <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="Last Name" />
    <span class="text-danger">@Html.ValidationMessage("LastName")</span>

    <input type="text" name="Email" value="@Model.Email" class="form-control" placeholder="Email" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>

    <input type="text" name="Phone" value="@Model.Phone" class="form-control" placeholder="Phone" />
    <span class="text-danger">@Html.ValidationMessage("Phone")</span>

    <input type="text" name="Address" value="@Model.Address" class="form-control" placeholder="Address" />
    <span class="text-danger">@Html.ValidationMessage("Address")</span>

    <input type="datetime" name="DateJoined" value="@Model.DateJoined.ToString("dd-MM-yyyy")" class="form-control" placeholder="Date Joined" />
    <span class="text-danger">@Html.ValidationMessage("DateJoined")</span>

    <input type="submit" value="Create" class="btn btn-success" />
</form>
